<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.snacklearning.mapper.SnackMapper">

    <resultMap id="SnackResultMap" type="com.example.snacklearning.entity.Snack">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="japanese_name" property="japaneseName"/>
        <result column="english_name" property="englishName"/>
        <result column="description" property="description"/>
        <result column="image_name" property="imageName"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="findAll" resultMap="SnackResultMap">
        SELECT id, name, japanese_name, english_name, description, image_name, created_at
        FROM snacks
        ORDER BY created_at DESC
            LIMIT #{offset}, #{pageSize}
    </select>

    <select id="countTotal" resultType="int">
        SELECT COUNT(*) FROM snacks
    </select>

    <select id="findById" resultMap="SnackResultMap">
        SELECT id, name, japanese_name, english_name, description, image_name, created_at
        FROM snacks
        WHERE id = #{id}
    </select>

</mapper>